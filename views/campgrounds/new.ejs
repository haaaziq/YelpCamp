<%- include("../partials/header") %>

<div class="container text-center formWidth">
    <h2 class="my-4">Create a new Campground</h2>
    
    <div class="form-group my-3">
        <form action="/campgrounds" method="post">
            <input type="text" name="name" placeholder="Campground's Name" class="d-block w-100 form-control my-3">
            <input type="number" name="price" placeholder="Price $/night" min="0.01" step="0.01" class="d-block w-100 form-control my-3">
            <input type="text" name="image" placeholder="Img URL" class="d-block w-100 form-control my-3">
            <textarea name="description" cols="10" rows="5" placeholder="Provide description" class="d-block w-100 form-control my-3"></textarea>
            <button class="btn btn-primary btn-block">Submit!</button>
        </form>    
    </div>
    
    <a href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>